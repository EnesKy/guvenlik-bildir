<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.enesky.guvenlikbildir.ui.fragment.latestEarthquakes.LatestEarthquakesVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_notify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:theme="@style/ToolbarStyle"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/label_latest_earthquakes"
                android:gravity="center"
                android:lineHeight="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="@dimen/default_text_20"/>

        </com.google.android.material.appbar.MaterialToolbar>

        <ProgressBar
            android:id="@+id/pb_loading"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:indeterminateTintMode="src_atop"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/sv_earthquake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_radius"
            app:iconifiedByDefault="false"
            app:queryHint="Filtrele..."
            app:layout_constraintTop_toBottomOf="@id/toolbar"/>

        <com.enesky.guvenlikbildir.custom.StatefulRecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/default_margin_10"
            app:layout_constraintTop_toBottomOf="@id/sv_earthquake"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_synchronize"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sync"
            app:tint="@android:color/white"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_colorPressed="@color/colorAccent"
            app:fab_size="normal"
            android:layout_margin="@dimen/default_margin_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
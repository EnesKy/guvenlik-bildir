<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Launcher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="android:dialogTheme">@style/DialogTheme</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/colorPrimary</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="dialogCornerRadius">@dimen/default_radius</item>
    </style>

    <style name="Widget.IndicatorFastScroll.FastScroller.Floating">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:background">@drawable/bg_radius</item>
        <item name="android:radius">@dimen/default_radius</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="seekbar1" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/apple</item>
        <item name="android:progressTint">@color/apple</item>
        <item name="android:colorControlActivated">@color/apple</item>
    </style>

    <style name="seekbar2" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/colorSecondary</item>
        <item name="android:progressTint">@color/colorSecondary</item>
        <item name="android:colorControlActivated">@color/colorSecondary</item>
    </style>

    <style name="seekbar3" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/cinnabar</item>
        <item name="android:progressTint">@color/cinnabar</item>
        <item name="android:colorControlActivated">@color/cinnabar</item>
    </style>

</resources>
